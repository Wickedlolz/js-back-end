<section id='deatils-page'>
    <div class='wrapper'>
        <div class='product-img'>
            <img src='{{house.image}}' />
        </div>
        <div class='product-info'>
            <div class='product-text'>
                <div class='product-text'>
                    <h1>Name: {{house.name}}</h1>
                    <h2>Type: {{house.type}}</h2>
                    <h4>Year: {{house.year}}</h4>
                    <h4>City: {{house.city}}</h4>
                    <p>{{house.description}}</p>

                    <!-- if there are already tenants of the housing, separate their names with a comma and a space ", "  -->
                    {{#if peopleRented}}
                        <p>People rented this housing: {{peopleRented}}</p>
                    {{else}}
                        <!-- If not display: -->
                        <p>People rented this housing: There are no tenants yet.</p>
                    {{/if}}
                </div>
            </div>

            <!-- if there is no registered user, do not display buttons-->
            {{#if hasUser}}
                <div class='product-btn'>
                    <!-- Only for registered user and creator of the housing offer-->
                    {{#if isAuthor}}
                        <a
                            href='/houses/edit/{{house._id}}'
                            class='edit'
                        >Edit</a>
                        <a
                            href='/houses/delete/{{house._id}}'
                            class='remove'
                        >Delete</a>
                    {{else}}
                        <!-- logged in user with available pieces-->
                        <!-- logged in user with no available pieces-->
                        {{#if canRent}}
                            <a
                                href='/houses/rent/{{house._id}}'
                                class='rentHome'
                            >Rent a home, available
                                {{house.availablePieces}}
                                housing</a>
                        {{else if isRented}}
                            <p class='alRentHome'>You have already rent this
                                home</p>
                        {{else if hasAvailablePieces}}
                            <p class='no-housing'>No Housing Available!</p>

                        {{/if}}
                    {{/if}}
                </div>
            {{/if}}
        </div>
    </div>
</section>