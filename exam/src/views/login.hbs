<div class='login-box'>
    <h1>Login</h1>
    <form action='/users/login' method='post'>
        <label>Email</label>
        <input
            type='text'
            name='email'
            value='{{data.email}}'
            placeholder='Email..'
        />
        <label>Password</label>
        <input type='password' name='password' placeholder='Password..' />
        <input type='submit' value='Submit' />
    </form>
    <p>Not have an account? <a href='/users/register'>Register here</a></p>
</div>