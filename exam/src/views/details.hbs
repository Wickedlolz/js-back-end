<section id='details-info'>
    <h1>Details</h1>
    <div class='coin-image'>
        <img src='{{crypto.image}}' />
    </div>
    <div class='coin-info'>
        <div class='coin-text'>
            <h1 id='name'>{{crypto.name}}</h1>
            <h3 id='payment'>Payment method: {{crypto.paymentMethod}}</h3>
            <p id='price'><span>Price: ${{crypto.price}}</span></p>
            <p id='description'>
                {{crypto.description}}
            </p>
        </div>
        {{#if hasUser}}
            <div class='product-btn'>
                {{#if isAuthor}}
                    <div class='author'>
                        <a
                            href='/trades/edit/{{crypto._id}}'
                            class='btn-edit'
                        >Edit</a>
                        <a
                            href='/trades/delete/{{crypto._id}}'
                            class='btn-delete'
                        >Delete</a>
                    </div>
                {{else}}
                    {{#if canBuy}}
                        <a
                            href='/trades/buy/{{crypto._id}}'
                            class='btn-buy'
                        >Buy</a>
                    {{else}}
                        <p class='buy-message'>You already bought these crypto
                            coins.</p>
                    {{/if}}
                {{/if}}
            </div>
        {{/if}}
    </div>
</section>