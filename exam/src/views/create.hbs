<section id='create-container'>
    <div class='create-container-info'>
        <h1>Create Announcement</h1>
        <h4>Post your coins to sell</h4>
        <form action='/trades/create' method='post'>
            <label>Name:</label>
            <input
                type='text'
                id='name'
                name='name'
                value='{{data.name}}'
                placeholder='Bitcoin'
            />
            <label>Image:</label>
            <input
                type='text'
                id='image'
                name='image'
                value='{{data.image}}'
                placeholder='http://...'
            />
            <label>Price:</label>
            <input
                type='number'
                id='price'
                name='price'
                value='{{data.price}}'
                placeholder='31,166.71'
            />
            <label>Description:</label>
            <textarea
                id='description'
                name='description'
                placeholder='Introduce your coins...'
            >
                {{data.description}}</textarea>
            <label>Payment method:</label>
            <select id='payment' name='payment'>
                <option value='crypto-wallet'>Crypto Wallet</option>
                <option value='credit-card'>Credit Card</option>
                <option value='debit-card'>Debit Card</option>
                <option value='paypal'>PayPal</option>
            </select>
            <input type='submit' id='btn' value='TRADE' />
        </form>
    </div>
</section>