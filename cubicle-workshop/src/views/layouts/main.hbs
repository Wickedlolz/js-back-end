<html lang='en'>
    <head>
        <meta charset='UTF-8' />
        <title>Cubicle - {{title}}</title>
        <link href='/static/css/site.css' type='text/css' rel='stylesheet' />
        <link
            rel='shortcut icon'
            type='image/x-icon'
            href='/static/images/favicon.png'
        />
    </head>
    <body>
        <div class='container'>
            <header>
                <ul>
                    <li><img class='logo' src='/static/images/logo.png' /></li>
                    <li><a href='/'>Browse</a></li>
                    <li><a href='/about'>About</a></li>
                    {{#if isAuthenticated}}
                        <li><a href='/create'>Add a Cube</a></li>
                        <li><a href='/create/accessory'>Add Accessory</a></li>
                        <li><a href='/logout'>Logout</a></li>
                    {{else}}
                        <li><a href='/login'>Login</a></li>
                        <li><a href='/register'>Register</a></li>
                    {{/if}}
                </ul>
            </header>
            <div id='notifications'>
                <p id='notification-message'>some errors here</p>
            </div>
            <main>
                {{{body}}}
            </main>
        </div>
        <footer>@Cubicle: Exercise for Express.js and Handlebars</footer>
    </body>
</html>