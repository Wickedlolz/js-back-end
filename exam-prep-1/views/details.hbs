<section id='details-page'>
    <h1>Details</h1>
    <article class='details-card'>
        <article class='details-card-text'>
            <h2>
                Title:<br />
                {{publication.title}}
            </h2>
            <h3>Author: {{publication.author.username}}</h3>
            <h3>Painting technique: {{publication.paintingTechnique}}</h3>
            <h3>Certificate of authenticity: {{publication.certificate}}</h3>

            <!-- If there is no registered user, do not display buttons-->
            {{#if hasUser}}
                <div class='buttons'>
                    <!-- Only for registered user and author of the publication -->
                    {{#if isAuthor}}
                        <a
                            href='/gallery/edit/{{publication._id}}'
                            class='btn-edit'
                        >Edit</a>
                        <a
                            href='/gallery/delete/{{publication._id}}'
                            class='btn-delete'
                        >Delete</a>
                    {{else}}
                        {{#if canShare}}
                            <a
                                href='/gallery/share/{{publication._id}}'
                                class='btn-share'
                            >Share publication</a>
                        {{else}}
                            <p class='shared-pub'>You already shared this
                                publication</p>
                        {{/if}}
                    {{/if}}
                </div>
            {{/if}}
        </article>

        <article class='details-card-image'>
            <img src='/static/img/img-5.jpg' alt='art-image2' />
        </article>
    </article>
</section>